<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp nền trắng hoặc màu nhạt -->
    <item>
        <color android:color="#FAFAFA" /> <!-- hoặc @color/background_light -->
    </item>

    <!-- Lớp gradient phủ lên -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#AA6C8EBF"
            android:endColor="#006C8EBF"
            android:angle="90" />
        </shape>
    </item>
</layer-list>
