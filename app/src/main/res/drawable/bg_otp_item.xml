<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ô đang được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- Nền xanh nhạt -->
            <solid android:color="#E3F2FD"/> <!-- Xanh nhạt rất sáng -->
            <corners android:radius="8dp"/>
            <!-- Viền xanh dương đậm khi focus -->
            <stroke android:width="2dp" android:color="#2196F3"/> <!-- Màu xanh dương nổi bật -->
        </shape>
    </item>

    <!-- Ô có lỗi (ví dụ: khi không hợp lệ hoặc có lỗi) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- Nền nhẹ hồng -->
            <solid android:color="#FFEBEE"/> <!-- Hồng nhạt, báo lỗi -->
            <corners android:radius="8dp"/>
            <!-- Viền đỏ -->
            <stroke android:width="2dp" android:color="#F44336"/> <!-- Màu đỏ nổi bật -->
        </shape>
    </item>

    <!-- Ô bình thường -->
    <item>
        <shape android:shape="rectangle">
            <!-- Nền trắng nhẹ -->
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <!-- Viền xám nhạt -->
            <stroke android:width="1dp" android:color="#B0BEC5"/> <!-- Xám nhẹ -->
        </shape>
    </item>

</selector>
